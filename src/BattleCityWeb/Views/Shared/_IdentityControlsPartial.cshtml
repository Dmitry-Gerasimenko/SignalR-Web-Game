
<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Index" asp-controller="Profile" title="Manage">Hi, @User.Identity.Name</a>
        </li>


        <li class="nav-item">
            <form id="logoutForm" asp-controller="Account" asp-action="LogOut" class="form-inline" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Log Out
                    <i class="text-dark fa  fa-sign-out"></i>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a id="registerLink" class="nav-link text-dark" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a id="loginLink" class="nav-link text-primary text-dark" asp-action="Login" asp-controller="Account">Sign In</a>
        </li>
    }
</ul>